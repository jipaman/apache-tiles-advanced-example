<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE tiles-definitions PUBLIC
       "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN"
       "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">
<tiles-definitions>
	<definition name="example/*" template="/layouts/classic.jsp">
		<put-attribute name="title" value="{1} || Tiles tutorial" />
		<put-attribute name="header" value="/tiles/banner.jsp" />
		<put-attribute name="menu" value="/tiles/common_menu.jsp" />
		<put-attribute name="body" value="/tiles/home_body.jsp" />
		<put-attribute name="footer" value="/tiles/credits.jsp" />
		<put-attribute name="heading" value="/tiles/{1}.jsp" />
		<put-attribute name="navigation" value="/tiles/navigation.jsp" />
	</definition>

	<definition name="example/*/*" template="/layouts/classic-{1}.jsp">
		<put-attribute name="title" value="{2} || Tiles tutorial" />
		<put-attribute name="header" value="/tiles/banner.jsp" />
		<put-attribute name="menu" value="/tiles/common_menu.jsp" />
		<put-attribute name="footer" value="/tiles/credits.jsp" />
		<put-attribute name="navigation" value="/tiles/navigation.jsp" />
	</definition>

</tiles-definitions>